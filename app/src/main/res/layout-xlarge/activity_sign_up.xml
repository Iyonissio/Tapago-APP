<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardMaxElevation="@dimen/_3sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/ic_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imgLogo"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Register"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:src="@drawable/ic_user" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/inputFirstName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:textColorHint="@color/lightBlack">

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/edFirstName"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@null"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:imeOptions="actionNext"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:textColor="@color/lightBlack"
                                    android:maxLength="25"
                                    android:minWidth="350dp"
                                    android:textSize="@dimen/_12sdp" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.9dp"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:src="@drawable/ic_user" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/inputLastName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:textColorHint="@color/lightBlack">

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/edLastName"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@null"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:imeOptions="actionNext"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:textColor="@color/lightBlack"
                                    android:maxLength="25"
                                    android:minWidth="350dp"
                                    android:textSize="@dimen/_12sdp" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.9dp"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:src="@drawable/ic_email" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/inputEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:textColorHint="@color/lightBlack">

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/edEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@null"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:imeOptions="actionNext"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:maxLength="35"
                                    android:minWidth="350dp"
                                    android:textSize="@dimen/_12sdp" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.9dp"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <com.hbb20.CountryCodePicker
                                android:id="@+id/ccp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                app:ccp_defaultPhoneCode="258"
                                app:ccp_textSize="@dimen/_13sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/inputMobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:textColorHint="@color/gray">

                                    <android.support.v7.widget.AppCompatEditText
                                        android:id="@+id/edMobile"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:background="@null"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:imeOptions="actionDone"
                                        android:inputType="phone"
                                        android:maxLength="16"
                                        android:maxLines="1"
                                        android:textColor="@color/lightBlack"
                                        android:minWidth="350dp"
                                        android:textSize="@dimen/_12sdp" />
                                </android.support.design.widget.TextInputLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.9dp"
                                    android:background="@color/colorPrimary" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:src="@drawable/ic_password" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/inputPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:textColorHint="@color/gray"
                                app:passwordToggleDrawable="@drawable/hide_password"
                                app:passwordToggleEnabled="true"
                                app:passwordToggleTint="@color/lightBlack">

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/edPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@null"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPassword"
                                    android:maxLines="1"
                                    android:textColor="@color/lightBlack"
                                    android:minWidth="350dp"
                                    android:textSize="@dimen/_12sdp" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.9dp"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:src="@drawable/ic_password" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/inputCPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:textColorHint="@color/gray"
                                app:passwordToggleDrawable="@drawable/hide_password"
                                app:passwordToggleEnabled="true"
                                app:passwordToggleTint="@color/lightBlack">

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/edCPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@null"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword"
                                    android:maxLines="1"
                                    android:textColor="@color/lightBlack"
                                    android:minWidth="350dp"
                                    android:textSize="@dimen/_12sdp" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.9dp"
                            android:background="@color/colorPrimary" />
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btnRegister"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/button_shape"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Register"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/txtAlready"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Already a member ?"
                                android:textSize="@dimen/_12sdp" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/txtLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="Login"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>