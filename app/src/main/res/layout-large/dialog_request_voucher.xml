<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_white_ripple"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgClose"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_gravity="end"
        android:src="@drawable/ic_cross" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtSelectVoucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Voucher Type"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:fontFamily="@font/montserrat_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            app:cardElevation="@dimen/_2sdp"
            app:cardUseCompatPadding="true">

            <Spinner
                android:id="@+id/vTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:fontFamily="@font/montserrat_regular" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/voucherPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MT0.00"
                android:textColor="@color/button_color"
                android:textSize="@dimen/_14sdp"
                app:fontFamily="@font/montserrat_regular" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtPerVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Per voucher"
                android:textColor="@color/lightBlack"
                android:textSize="@dimen/_11sdp"
                app:fontFamily="@font/montserrat_regular" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/remainingVoucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Only 0 voucher left"
        android:textColor="@color/button_color"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone"
        app:fontFamily="@font/montserrat_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtNumVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Number of Voucher"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:fontFamily="@font/montserrat_regular" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                app:cardElevation="@dimen/_2sdp"
                app:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/vNumberSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:fontFamily="@font/montserrat_regular" />

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Amount to be paid"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:fontFamily="@font/montserrat_regular" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/voucherTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="MT0.00"
                android:textColor="@color/button_color"
                android:textSize="@dimen/_15sdp"
                app:fontFamily="@font/montserrat_bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/montserrat_regular" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvDiscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="Discount Amount"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/montserrat_regular" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtDiscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="MT0.00"
            android:textColor="@color/button_color"
            android:textSize="@dimen/_15sdp"
            app:fontFamily="@font/montserrat_bold" />
    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnProceed"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/montserrat_regular"
        android:text="Proceed"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>